{
  "manifest_version": 2,
  "name": "Final",
  "version": "1.1.0",
  "description": "Control any tab's volume separately",
  "permissions": [
    "activeTab",
    "tabCapture",
    "background",
    "contentSettings",
		"storage"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {   
    "page": "background.html",
    "persistent": true
  },
  "icons": {
    "512": "icon.png"
  },
  "content_scripts": [
		{
			"matches": [
				"https://*/*",
				"http://*/*"
			],
			"js": ["content.js"],
			"all_frames" : true
		}
  ],
	"options_ui": {
		"chrome_style": true,
		"page": "options.html"
	}
}